<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@android:color/white"
                tools:context="sheyko.aleksey.restsurvey.ui.AdminLoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter admin\npanel"
        android:fontFamily="sans-serif-light"
        android:textSize="60sp"
        android:textColor="#5e000000"
        android:id="@+id/textView7"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        android:id="@+id/jobTitle"
        android:hint="Job title (i.e. Manager)"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="textCapWords"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:id="@+id/password"
        android:hint="Pin code"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/jobTitle"
        android:layout_alignStart="@+id/jobTitle"
        android:layout_alignRight="@+id/jobTitle"
        android:layout_alignEnd="@+id/jobTitle"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="48dp"
        android:inputType="number"
        android:maxLength="4"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/password"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#f3f3f3">

        <Button
            android:id="@+id/buttonLogin"
            android:text="Sign in"
            style="@style/ChoiceButton"
            android:textSize="32sp"
            android:textColor="#c8ffffff"
            android:background="@drawable/button_start"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/password"
            android:layout_centerHorizontal="true"/>
    </FrameLayout>

</RelativeLayout>
