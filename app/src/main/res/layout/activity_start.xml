<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity"
                android:gravity="center_horizontal"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
    android:background="#0e91a1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thank you for visiting us today!"
        android:id="@+id/messageTextView"
        android:textSize="55sp"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="180dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you have a moment, please help us improve our service"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startButton"
        android:text="Start survey"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="true"
        android:textSize="28sp"
        android:textScaleX="1.05"
        android:background="#f1693c"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="34dp"
        android:paddingRight="34dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

</RelativeLayout>
