<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#0e91a1</item>
        <item name="android:titleTextStyle">@style/ActionBar.TextStyle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="ActionBar.TextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#b5ffffff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.EmptyActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar.Empty</item>
    </style>

    <style name="ActionBar.Empty" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#0e91a1</item>
        <item name="android:displayOptions">none</item>
    </style>

    <style name="ChoiceButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#585959</item>
        <item name="android:paddingTop">28dp</item>
        <item name="android:paddingBottom">28dp</item>
        <item name="android:layout_marginBottom">28dp</item>
        <item name="android:background">@drawable/button_choice</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
