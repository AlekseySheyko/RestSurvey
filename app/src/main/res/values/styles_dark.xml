<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar.Dark" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Dark" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar.Dark</item>
        <item name="android:windowBackground">@color/window_bg_dark</item>
    </style>

    <style name="ActionBar.Dark" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#32000000</item>
        <item name="android:titleTextStyle">@style/ActionBar.TextStyle.Dark</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="ActionBar.TextStyle.Dark" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#bdffffff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.EmptyActionBar.Dark" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar.Empty.Dark</item>
    </style>

    <style name="ActionBar.Empty.Dark" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#1b1b1b</item>
        <item name="android:displayOptions">none</item>
    </style>

    <style name="ChoiceButtonDark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#585959</item>
        <item name="android:paddingTop">22dp</item>
        <item name="android:paddingBottom">22dp</item>
        <item name="android:layout_marginBottom">28dp</item>
        <item name="android:background">@drawable/button_choice_light</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
