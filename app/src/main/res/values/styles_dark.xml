<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar.Dark" parent="@style/Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/window_bg_dark</item>

        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Dark" parent="@style/Theme.AppCompat">
        <item name="actionBarStyle">@style/ActionBar.Dark</item>
        <item name="android:textColor">#85ffffff</item>
    </style>

    <style name="ActionBar.Dark" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/actionbar_background_dark</item>
        <item name="titleTextStyle">@style/ActionBar.TextStyle.Dark</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="ActionBar.TextStyle.Dark" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#bdffffff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.EmptyActionBar.Dark" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/ActionBar.Empty.Dark</item>
    </style>

    <style name="ActionBar.Empty.Dark" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/actionbar_empty_dark</item>
        <item name="displayOptions">none</item>
    </style>

    <style name="ChoiceButtonDark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#585959</item>
        <item name="android:paddingLeft">26dp</item>
        <item name="android:paddingRight">26dp</item>
        <item name="android:paddingTop">22dp</item>
        <item name="android:paddingBottom">22dp</item>
        <item name="android:layout_marginBottom">28dp</item>
        <item name="android:background">@drawable/button_choice_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <color name="actionbar_empty_dark">#1b1b1b</color>
    <color name="actionbar_background_dark">#161616</color>
</resources>
